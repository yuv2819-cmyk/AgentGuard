{
  "name": "agentguard-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:local": "node scripts/dev-local.mjs",
    "dev:api": "npm run dev --workspace @agentguard/api",
    "dev:web": "npm run dev --workspace @agentguard/web",
    "build": "npm-run-all build:shared build:api build:web",
    "build:shared": "npm run build --workspace @agentguard/shared",
    "build:api": "npm run build --workspace @agentguard/api",
    "build:web": "npm run build --workspace @agentguard/web",
    "lint": "npm-run-all lint:api lint:web",
    "lint:api": "npm run lint --workspace @agentguard/api",
    "lint:web": "npm run lint --workspace @agentguard/web",
    "test": "npm-run-all test:api test:web",
    "test:api": "npm run test --workspace @agentguard/api",
    "test:web": "npm run test --workspace @agentguard/web",
    "format": "prettier --write .",
    "db:migrate": "npm run prisma:migrate --workspace @agentguard/api",
    "db:migrate:dev": "npm run prisma:migrate:dev --workspace @agentguard/api",
    "db:seed": "npm run prisma:seed --workspace @agentguard/api",
    "db:generate": "npm run prisma:generate --workspace @agentguard/api"
  },
  "devDependencies": {
    "embedded-postgres": "^18.2.0-beta.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}
